<%= form_for @bean do |f| %>
    <%= f.label :名前 %>
    <%= f.text_field :name, :size => 140 %>

    <%= f.label :産地 %>
    <%= f.text_field :area, :size => 140 %> 

    <%= f.label :リンク %>
    <%= f.text_field :url, :size => 140 %> 

    <%= f.label :味 %>
    <%= f.text_field :taste, :size => 140 %> 

    <%= f.label :価格 %>
    <%= f.text_field :price, :size => 140 %> 

    <%= f.label :おすすめの挽き方 %>
    <%= f.text_field :grind, :size => 140 %> 



    <%= f.submit "編集する" %>
  <% end %>